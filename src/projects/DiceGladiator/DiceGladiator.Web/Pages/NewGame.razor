@page "/new-game"
@inject GameService GameService;
@inject NavigationManager NavigationManager;
@inject Blazored.LocalStorage.ILocalStorageService localStorage;

<PageTitle>New game</PageTitle>

<MudText Typo="Typo.h5">Welcome gladaitors!</MudText>

<MudText Typo="Typo.body1">*Insert rules*</MudText>

<PlayerManagement @ref="NewPlayers" />

<MudText Typo="Typo.body1">
	Let the battle...
	<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="StartGame">Begin</MudButton>
</MudText>
@code {

	private PlayerManagement NewPlayers = new();

	private async Task StartGame()
	{
		GameService.Start(NewPlayers.Players.Where(p => !string.IsNullOrEmpty(p.Name)).ToList(), 1000);
		await localStorage.SetItemAsync("gameSession", GameService);

		NavigationManager.NavigateTo("/");
	}
}