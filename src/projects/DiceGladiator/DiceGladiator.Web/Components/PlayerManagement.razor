@foreach (var player in Players)
{
	<MudTextField @bind-Value="player.Name" Label="Outlined" Variant="Variant.Outlined" @onkeydown="@HandleKeyDown"></MudTextField>
	<MudButton Variant="Variant.Outlined" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Delete" OnClick="() => RemovePlayer(player)" />
}

<MudButton Variant="Variant.Outlined" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="AddPlayer" />

@code {

	[Parameter]
	public List<Player> Players { get; set; } = new List<Player>
	{
		new Player()
	};

	public  void AddPlayer() => Players.Add(new Player());
	private void RemovePlayer(Player player) => Players.Remove(player);

	private void HandleKeyDown(KeyboardEventArgs e)
	{
		if (e.Code == "Enter")
		{
			AddPlayer();
			StateHasChanged();
		}
	}
}
