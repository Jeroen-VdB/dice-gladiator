<MudGrid Justify="Justify.Center">

	<MudItem xs="12" Class="d-flex align-center justify-center mud-width-full">
		<MudText Typo="Typo.h4">The new arena champion is</MudText>
	</MudItem>

	<MudItem xs="12" Class="d-flex align-center justify-center mud-width-full">
		<MudText Typo="Typo.h3">@GameService.Players.MaxBy(p => p.Score)?.Name</MudText>
	</MudItem>

	<MudItem xs="12" Class="d-flex align-center justify-center mud-width-full">
		<MudButton Variant="Variant.Filled" Color="Color.Primary" Href="new-game">New game</MudButton>
	</MudItem>

</MudGrid>

@code {

	[CascadingParameter]
	public required GameService GameService { get; set; }

}