@inject Blazored.LocalStorage.ILocalStorageService localStorage;

<MudGrid Justify="Justify.Center">
	<MudItem xs="12" Class="d-flex align-center justify-center">
		<MudTooltip Color="Color.Primary" Arrow="true">
			<ChildContent>
				<MudText>
					Select who got poisened during this round <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Primary" />
				</MudText>
			</ChildContent>
			<TooltipContent>
				<MudText Typo="Typo.h6">Todo</MudText>
				<MudText Typo="Typo.body2">Explain</MudText>
			</TooltipContent>
		</MudTooltip>
	</MudItem>

	@foreach (var player in GameService.Players)
	{
		<MudItem xs="6" Class="d-flex align-center justify-left">
			<MudCheckBox @bind-Checked="@player.Poisoned" Label="@player.Name" Color="@Color.Success" Style="@($"color:{Colors.Green.Default};")"></MudCheckBox>
		</MudItem>
	}
</MudGrid>

@code {

	[CascadingParameter]
	public required GameService GameService { get; set; }

}
