<MudGrid Justify="Justify.Center">
	<MudItem xs="12" Class="d-flex align-center justify-center mud-width-full">
		<MudText Typo="Typo.h6">Leaderboard</MudText>
	</MudItem>

	@foreach (var item in GameService.Players.OrderByDescending(p => p.Score).Select((player, index) => new { player, index }))
	{
		<MudItem xs="12" Class="d-flex align-center justify-center mud-width-full">
			<MudText>@AddOne(item.index). <strong>@item.player.Name:</strong> @item.player.Score</MudText>
		</MudItem>
	}
</MudGrid>

@code {

	[CascadingParameter]
	public required GameService GameService { get; set; }

	public void Refresh()
	{
		StateHasChanged();
	}

	private int AddOne(int i)
	{
		return i + 1;
	}

}