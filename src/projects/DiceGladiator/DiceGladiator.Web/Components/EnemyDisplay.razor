<img src="/img/spartan-silhouette.png" asp-append-version="true" class="img-fluid" style="height:150px" />

<p>
	@if (GameService.CurrentEnemy.Elite)
	{
		<div>
			💀
		</div>
	}
	🎖️: @GameService.CurrentEnemy.Score
</p>

<p>
	❤️: @GameService.CurrentEnemy.Health
</p>

<p>
	@if (GameService.CurrentEnemy.Speed > 0)
	{
		<div>
			👣: @GameService.CurrentEnemy.Speed
		</div>
	}
</p>

<p>
	@if (GameService.CurrentEnemy.Duo)
	{
		<div>
			👥
		</div>
	}
</p>

<p>
	@if (GameService.CurrentEnemy.WeakSpot > 0)
	{
		<div>
			🎯: @GameService.CurrentEnemy.WeakSpot
		</div>
	}
</p>

@code {

	[CascadingParameter]
	public GameService GameService { get; set; }

}